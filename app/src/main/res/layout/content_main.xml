<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".MainActivity"
    android:background="@drawable/background_2"
tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:textColor="#32636A"
            android:textStyle="bold"
            android:gravity="right"
            android:text="45"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#32636A"
            android:textStyle="bold"
            android:gravity="right"
            android:text=" BTPoints"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <TextView
        android:background="#32636A"
        android:textColor="#32636A"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="61dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"/>


<android.support.v7.widget.RecyclerView
    android:background="#FFFFFF"
    android:id="@+id/listCompromisso"
    android:layout_marginTop="62dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Hello World!"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/microphone_icon" />

<ImageView
    android:id="@+id/btn_microphone"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/button_picture"
    android:text="Hello World!"
    android:layout_marginBottom="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_editor_absoluteX="181dp"
    tools:layout_editor_absoluteY="556dp" />

</android.support.constraint.ConstraintLayout>